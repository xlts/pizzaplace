<h1> Pizza places </h1>
<%= link_to "New pizza place", new_pizza_place_path %>

<hr>

<br>
<% @pizza_places.each do |place| %>
	<%= link_to 'Edit', edit_pizza_place_path(place) %>, <%= link_to 'Delete', place, method: :delete, data: { confirm: 'Are you sure?' } %> <br>
	<h4> <%= link_to place.name, place %> </h4>
	<b>Name: </b> 
	<%= place.name %> 	
	<br>
 
	<b>Address: </b> 
	<%= place.address %>
	<br>

	<b>Open from: </b> 
	 <%= place.open_from.strftime("%H:%M") %>
	<br>

	<b>Open until: </b> 
	<%= place.open_until.strftime("%H:%M") %> 
	<br>
	
	
	<b>Pizza types:</b> <% if place.pizza_types.nil? %>
								none 
							<% else %>
								<% place.pizza_types.each do |t| %>
								 <%= link_to t.name, t %> 
							    <% end %>
							<% end %>
	
		<hr>
<% end %>


