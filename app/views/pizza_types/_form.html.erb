<%= form_for :pizza_type, url: pizza_types_path do |f| %> 

	<% if @pizza_type.errors.any? %>
	  <div id="error_explanation">
	    <h2><%= pluralize(@pizza_type.errors.count, "error") %> prohibited this Pizza type from being saved:</h2>
	 
	    <ul>
	    <% @pizza_type.errors.full_messages.each do |msg| %> 
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>


	<table class="table">
		<tr>
			<td><%= f.label :name %> </td>
			<td><%= f.text_field :name %> </td>
		</tr>

		<tr>
			<td><%= f.label :price %> </td>
			<td><%= f.text_field :price %> </td>
		</tr>

		<tr>
			<td><%= f.label :ingredients %> </td>
			<td><%= f.text_field :ingredients %> </td>
		</tr>
	</table>

	<p>
		Assign to pizza places: <br>
		<%= collection_check_boxes :pizza_type, :pizza_place_ids, PizzaPlace.all, :id, :name %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>

